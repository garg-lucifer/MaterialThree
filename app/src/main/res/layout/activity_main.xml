<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLOR CONFIGURATION"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/tv"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Access Dot"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Microphone Access Dot"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS Location Access Dot"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_margin="20dp"
        android:text="LOCATION"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mtv"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:chipCornerRadius="20dp"
            app:rippleColor="@color/green"
            app:chipBackgroundColor="@color/green_secondary"
            android:text="Left Camera" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/green"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="@color/green_secondary"
            android:layout_margin="5dp"
            android:text="Right Camera" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/green"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="@color/green_secondary"
            android:layout_margin="5dp"
            android:text="Top Left" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/green"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="@color/green_secondary"
            android:text="Top Right"
            android:layout_margin="5dp"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/green"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="@color/green_secondary"
            android:text="Bottom Left"
            android:layout_margin="5dp"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/green"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="@color/green_secondary"
            android:text="Bottom Right"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@id/chip1"
        android:layout_below="@id/ll3"
        app:chipCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/green"
        app:chipBackgroundColor="@color/green_secondary"
        android:text="Around Camera"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"/>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_below="@id/chip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp">

        <com.google.android.material.chip.Chip
            android:id="@id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="20dp"
            app:rippleColor="@color/green"
            app:chipBackgroundColor="@color/green_secondary"
            android:text="Custom"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="274"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: "
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIZE"
        android:layout_below="@id/ll4"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <com.google.android.material.slider.Slider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mtv2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>